<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products</title>
  </head>

  <body>
    <hi>All Products</hi>
    <!-- creates a ul and does a loop -->
    <ul>
      <% for(let product of products) { %>
      <!-- replacing the manual insertion of product id by anchor tag -->
      <!-- <li><%= product.name %></li> -->
      <li><a href="/products/<%=product._id%>"><%= product.name %></a></li>

      <% }%>
    </ul>
  </body>
</html>
